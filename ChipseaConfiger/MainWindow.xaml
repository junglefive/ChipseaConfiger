<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChipseaConfiger"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="ChipseaConfiger.MainWindow"
        mc:Ignorable="d"
        Title="ChipseaConfiger" Height="467" Width="672" Background="#FF746A6A" Loaded="Window_Loaded">
    <Grid Name="GridWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="42*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="288*"/>
            <RowDefinition Height="20" Name="RowStatusBar"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu x:Name="menu" Background="#FF919AAA" DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New File" />
                    <MenuItem Header="_Open File" />
                    <MenuItem Header="_Save "/>
                    <MenuItem Header="_Save As..."/>
                    <MenuItem Header="_Close File"/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Cut"/>
                    <MenuItem Header="_Copy"/>
                    <MenuItem Header="_Paste"/>
                    <MenuItem Header="_Undo"/>
                    <MenuItem Header="_Redo"/>
                </MenuItem>

                <MenuItem Header="_View">
                    <MenuItem Header="_Toglge Layout" Click="ToggleLayout"/>
                    <MenuItem Header="_Toggle WordWrap" Click="ToggleShowWordWrap"/>
                    <MenuItem Header="_Toggle LineNumber" Click="ToggleShowLineNumber"/>
                    <MenuItem Header="_Check SFR"/>
                    <MenuItem Header="_Check Setup Result"/>
                </MenuItem>
                <MenuItem Header="_Language">
                    <MenuItem Header="_Assembly"/>
                    <MenuItem Header="_C Language"/>
                </MenuItem>
                <MenuItem Header="_Options">
                    <MenuItem Header="_Toggle StatusBar" Click="ToggleStatusBar"/>
                </MenuItem>
                <MenuItem Header="_Perioherials">
                    <MenuItem Header="_PortIO"/>
                    <MenuItem Header="_Oscillators"/>
                    <MenuItem Header="_Timers"/>
                    <MenuItem Header="_Uart"/>
                    <MenuItem Header="_SPI"/>
                    <MenuItem Header="_ADC"/>
                    <MenuItem Header="_Volatage Reference"/>
                    <MenuItem Header="_Interrupt"/>
                    <MenuItem Header="_Reset All"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="Contact"/>
                    <MenuItem Header="ChangeLog"/>
                    <MenuItem Header="About"/>
                </MenuItem>

            </Menu>
        </DockPanel>
        <Grid x:Name="GridPanel" Grid.Row="1" Background="#FFD3D5EC" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Name="ColumnLeft" Width="400*"/>
                <ColumnDefinition Name="ColumnRight"  Width="400*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter x:Name="gridSplitter" Grid.Column="1" HorizontalAlignment="Left" Width="4" Background="#FFD3F7F1"/>
            <avalonedit:TextEditor x:Name="TextEditorLeft" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#FFDCD7D7" BorderThickness="2"/>
            <avalonedit:TextEditor x:Name="TextEditorRight" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="4,0,0,0" Background="#FFCADAD9" BorderThickness="2"/>
        </Grid>
        <StatusBar Name="StatusBar" Grid.Row="2" Grid.ColumnSpan="2" DockPanel.Dock="Bottom"/>
        
    </Grid>

</Window>
